block child
    div.product-section
        div.sidebar
            |Search, filter, etc.
        div.product-list
            if(product_list)
                table
                    tr
                        th(style='width:20%')
                        th(style='width:70%') Record
                        th(style='width:10%') Price [â‚¬]                        
                    each item in product_list
                        tr
                            td: img(src='http://localhost:3000/images/' + item.image_file width='100%')
                            td
                                |#{item.name}
                                br
                                i #{item.description}

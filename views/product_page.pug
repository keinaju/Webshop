extends main.pug

block child
    script
        include post_json.js

    div.product-page-grid
        div
            a(href='javascript:history.back()') ← Return
        div

        div.align-center(style='padding-right: 30px; padding-top: 30px;')
            img.shadow(style='max-width:450px;' src='/images/' + item.image_file)
        div.product-card.shadow
            div.align-right
                |##{item.code}
            hr
            h1.align-right #{item.name}
            div.align-right
                |#{item.price} € / unit 
                include add_to_cart_button.pug
            if item.released
                |Released: #{`${item.released.getDate()}.${item.released.getMonth() + 1}.${item.released.getFullYear()}`}
                br
            if item.manufacturer
                |Manufacturer: #{item.manufacturer}
                br
            if item.country_of_origin
                |Country of origin: #{item.country_of_origin}
                br
            br
            if item.description
                div(style='border-left: black solid 1px; padding-left: 5px;'): i #{item.description}
            br
            br
            if item.notes
                |Notes: #{item.notes}
                br
            if item.lead_time_workdays
                |Can be delivered in #{item.lead_time_workdays} working days.
                br
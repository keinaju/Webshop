extends main.pug

block child
    form(action='/products/add' method='post' enctype='multipart/form-data')

        div
            b Fill form to add new product to database:

        div
            label(for='product_code') Product code:
            br
            input(id='product_code' name='product_code' type='text' size='60' minlength='1' maxlength='100')

        div
            label(for='product_name') Name:
            br
            input(id='product_name' name='product_name' type='text' size='60' minlength='1' maxlength='100' required)

        div
            label(for='description') Description:
            br
            textarea(id='description' name='description' rows='5' cols='60')
        
        div
            label(for='notes') Notes:
            br
            textarea(id='notes' name='notes' rows='5' cols='60')

        div
            label(for='price') Price [â‚¬]:
            br
            input(id='price' name='price' type='number' min='0.01' max='99999.99' step='0.01' size='8' required)

        div
            |Categories:
            include categories_list.pug

        div
            label(for='image') Image:
            br
            input(type='file' accept='image/*' id='image' name='image')

        div
            label(for='release_date') Released:
            br
            input(id='release_date' name='release_date' type='date')

        div
            label(for='manufacturer') Manufacturer:
            br
            input(id='manufacturer' name='manufacturer' type='text' size='60' minlength='1' maxlength='100')

        div
            label(for='country_of_origin') Country of origin:
            br
            input(id='country_of_origin' name='country_of_origin' type='text' size='60' minlength='1' maxlength='100')

        div
            label(for='lead_time_workdays') Delivery time as working days:
            br
            input(id='lead_time_workdays' name='lead_time_workdays' type='number' min='1' step='1' size='8')

        div
            br
            button(type='submit') Upload to database